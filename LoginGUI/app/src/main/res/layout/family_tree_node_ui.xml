<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/FamilyTreeNodeUI_IV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/no_profile_pic_round" />

    <TextView
        android:id="@+id/FamilyTreeNodeUI_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/FamilyTreeNodeUI_IV"
        app:layout_constraintStart_toStartOf="@id/FamilyTreeNodeUI_IV"
        app:layout_constraintEnd_toEndOf="@id/FamilyTreeNodeUI_IV"
        android:text="@string/full_name_default" />

    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FamilyTreeNodeUI_TV" />
</androidx.constraintlayout.widget.ConstraintLayout>
