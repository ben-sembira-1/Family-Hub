<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/FAMILY_TREE_PROFILE_IMG"
        android:layout_width="@dimen/treePicDimens"
        android:layout_height="@dimen/treePicDimens"
        android:layout_marginLeft="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/no_profile_pic" />

    <TextView
        android:id="@+id/FAMILY_TREE_PROFILE_NAME"
        android:layout_width="@dimen/treePicDimens"
        android:layout_height="@dimen/treePicNameHeight"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="name"
        android:textSize="@dimen/treePicNameTextSize"
        android:layout_below="@id/FAMILY_TREE_PROFILE_IMG"
        android:layout_alignStart="@id/FAMILY_TREE_PROFILE_IMG" />

</RelativeLayout>