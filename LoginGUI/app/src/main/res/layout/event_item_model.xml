<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headerEventItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="Event Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/eventItem_additionalImage"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/eventItemSpaceView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="@+id/hostEventItemTextView"
        app:layout_constraintStart_toStartOf="@+id/hostEventItemTextView"
        app:layout_constraintTop_toBottomOf="@+id/hostEventItemTextView" />

    <TextView
        android:id="@+id/hostEventItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="By Israel Isareli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eventItem_additionalImage"
        app:layout_constraintTop_toBottomOf="@+id/eventItem_date" />

    <ImageView
        android:id="@+id/eventItem_additionalImage"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/eventItemSpaceView"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <!--<ImageView-->
    <!--android:id="@+id/eventItemComingStateImageView"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="8dp"-->
    <!--android:layout_marginEnd="8dp"-->
    <!--android:layout_marginBottom="8dp"-->
    <!--app:layout_constraintBottom_toBottomOf="@+id/eventItemSpaceView"-->
    <!--app:layout_constraintEnd_toEndOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--app:srcCompat="@drawable/thumbs_up_64" />-->

    <TextView
        android:id="@+id/eventItem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="dd/mm/yy"
        app:layout_constraintEnd_toEndOf="@+id/hostEventItemTextView"
        app:layout_constraintStart_toStartOf="@+id/hostEventItemTextView"
        app:layout_constraintTop_toBottomOf="@+id/headerEventItem" />

</androidx.constraintlayout.widget.ConstraintLayout>